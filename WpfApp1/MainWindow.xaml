<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Mozijegy foglaló" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Label Content="Mozi Jegyfoglaló rendszer" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
        <DataGrid x:Name="dataGrid" Grid.Row="1"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="5">
            <Button Content="Adatok betöltése" Width="120" Click="Adatokbetöltése"/>
            <Button Content="Helyfoglalás" Width="120" Click="foglalás"/>
            <Button Content="Szabad helyek" Width="120" Click="vanhely"/>
            <Button Content="Legnépszerűbb" Width="120" Click="legnepszerubb"/>
            <Button Content="Átlagos szabad hely" Width="120" Click="atlagszabadhely"/>
            <Button Content="Csak 3D-s filmek" Width="120" Click="legnepszerubb"/>
            
        </StackPanel>

    </Grid>
</Window>
